/* pages/shopping/shopping.wxss */
page{
  /* background-color: #ddd; */
}
.clearfix::after {
  content: "";
  display: block;
  clear: both;
}
.location {
  font-size: 32rpx;
  margin: 10rpx 20rpx;
  padding: 10rpx 5rpx;
}

.search {
  height: 70rpx;
  line-height: 70rpx;
  margin: 10rpx 20rpx;
  padding-left: 20rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #999;
  border: 1rpx solid #eee;
}
.search input {
  height: 100%;
}
.swiper-wrapper {
  margin: 10rpx 20rpx;
  height: 300rpx;
  line-height: 200rpx;
  text-align: center;
  background-color: #eee;
  border-radius: 12rpx;
  overflow: hidden;
}
.swiper-wrapper swiper swiper-item {
  position: relative;
}
swiper-item image{
  width: 100%;
  height:300rpx;
}

.nav {
  margin:10rpx;
  padding: 10rpx;
}
.nav .title {
  margin:10rpx 0;
  padding-bottom: 10rpx;
  border-bottom:1px solid #ddd;
}
.nav .service{
  width: 100%;
  display: flex;
  margin-top: 20rpx;
  justify-content:flex-start;
  flex-wrap: wrap;
}
.nav .service .type {
  width: 150rpx;
  height: 150rpx;
  margin-right: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.nav .service .type .type-img {
  width: 100rpx;
  height: 100rpx;
}
.nav .service .type .type-img image {
  width: 100%;
  height: 100%;
}
.nav .service .type .type-text {
  font-size: 28rpx;
  text-align: center;
}
.notice{
  border-top: 20rpx solid #eee;
  padding: 20rpx;
}
.notice .title {
  border-bottom: 1rpx solid #ddd;
  padding-bottom: 10rpx;
}
